<!DOCTYPE databaseChangeLog [
        <!ENTITY TEWorlds "/WORLDS/">
        <!ENTITY TEPlayers "/PLAYERS/">
        <!ENTITY TEPlayerPlayerAccessibility "/PLAYER_PLAYER_ACCESSIBILITY/">
        <!ENTITY TENPCs "/NPCS/">
        <!ENTITY TENpcNpcAccessibility "/NPC_NPC_ACCESSIBILITY/">
        <!ENTITY TEPlayerNpcAccessibility "/PLAYER_NPC_ACCESSIBILITY/">
        <!ENTITY TENpcPlayerAccessibility "/NPC_PLAYER_ACCESSIBILITY/">
        <!ENTITY TECurrencies "/CURRENCIES/">
        <!ENTITY TECurrenciesPlayerBalances "/CURRENCIES_BALANCES_PLAYERS/">
        <!ENTITY TECurrenciesNPCBalances "/CURRENCIES_BALANCES_NPCS/">
        <!ENTITY TEShops "/SHOPS/">
        <!ENTITY TETradeObjects "/TRADE_OBJECTS/">
        ]>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet author="Articdive" id="1">

        <createTable tableName="&TEWorlds;">
            <column name="identifier" type="VARCHAR(36)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="maincurrency_name" type="VARCHAR(36)"/>
        </createTable>

        <createTable tableName="&TEPlayers;">
            <column name="identifier" type="VARCHAR(36)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="lastKnownName" type="VARCHAR(255)"/>
            <column name="registered" type="BIGINT(20)"/>
            <column name="lastOnline" type="BIGINT(20)"/>
            <column name="language" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="&TEPlayerPlayerAccessibility;">
            <column name="player_identifier_1" type="VARCHAR(36)"/>
            <column name="player_identifier_2" type="VARCHAR(36)"/>
        </createTable>

        <createTable tableName="&TENPCs;">
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="registered" type="BIGINT(20)"/>
        </createTable>

        <createTable tableName="&TENpcNpcAccessibility;">
            <column name="npc_name_1" type="VARCHAR(255)"/>
            <column name="npc_name_2" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="&TEPlayerNpcAccessibility;">
            <column name="player_identifier" type="VARCHAR(36)"/>
            <column name="npc_name" type="VARCHAR(255)"/>
        </createTable>


        <createTable tableName="&TENpcPlayerAccessibility;">
            <column name="npc_name" type="VARCHAR(255)"/>
            <column name="player_identifier" type="VARCHAR(36)"/>
        </createTable>

        <createTable tableName="&TECurrencies;">
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="world_identifier" type="VARCHAR(36)"/>
        </createTable>

        <createTable tableName="&TECurrenciesPlayerBalances;">
            <column name="tecurrency_name" type="VARCHAR(36)"/>
            <column name="player_identifier" type="VARCHAR(36)"/>
            <column name="balance" type="DECIMAL"/>
        </createTable>

        <createTable tableName="&TECurrenciesNPCBalances;">
            <column name="tecurrency_name" type="VARCHAR(36)"/>
            <column name="npc_name" type="VARCHAR(36)"/>
            <column name="balance" type="DECIMAL"/>
        </createTable>

        <createTable tableName="&TEShops;">
            <!-- TEShop -->
            <column name="identifier" type="VARCHAR(36)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="world_identifier" type="VARCHAR(36)"/>
            <column name="shop_type" type="VARCHAR(255)"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="entrance_message" type="TEXT"/>
            <column name="exit_message" type="TEXT"/>
            <!-- ServerShop -->
            <column name="minX" type="INTEGER"/>
            <column name="minY" type="INTEGER"/>
            <column name="minZ" type="INTEGER"/>
            <column name="maxX" type="INTEGER"/>
            <column name="maxY" type="INTEGER"/>
            <column name="maxZ" type="INTEGER"/>
            <!-- TownyShop -->
            <column name="x" type="INTEGER"/>
            <column name="z" type="INTEGER"/>
        </createTable>

        <createTable tableName="&TETradeObjects;">
            <!-- TETradeObject -->
            <column name="identifier" type="VARCHAR(36)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="tradeObjectType" type="VARCHAR(255)"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="displayName" type="VARCHAR(255)"/>
            <column name="shop_identifier" type="VARCHAR(36)"/>
            <column name="dynamic" type="BIT(1)"/>
            <column name="staticPrice" type="DECIMAL"/>
            <column name="price" type="DECIMAL"/>
            <column name="median" type="DECIMAL"/>
            <column name="startPrice" type="DECIMAL"/>
            <column name="maxPrice" type="DECIMAL"/>
            <column name="minPrice" type="DECIMAL"/>
            <column name="maxStock" type="INTEGER"/>
            <column name="stock" type="INTEGER"/>
            <!-- TEItemTradeObject -->
            <column name="itemData" type="MEDIUMTEXT"/>
        </createTable>

        <addUniqueConstraint tableName="&TETradeObjects;" columnNames="name,displayName,shop_identifier,tradeObjectType"/>

        <addForeignKeyConstraint baseTableName="&TEWorlds;" baseColumnNames="maincurrency_name"
                                 constraintName="world_maincurrency" referencedTableName="&TECurrencies;"
                                 referencedColumnNames="name"/>

        <addForeignKeyConstraint baseTableName="&TECurrencies;" baseColumnNames="world_identifier"
                                 constraintName="currency_world" referencedTableName="&TEWorlds;"
                                 referencedColumnNames="identifier"/>

        <addForeignKeyConstraint baseTableName="&TEShops;" baseColumnNames="world_identifier"
                                 constraintName="shop_world" referencedTableName="&TEWorlds;"
                                 referencedColumnNames="identifier"/>

        <addForeignKeyConstraint baseTableName="&TETradeObjects;" baseColumnNames="shop_identifier"
                                 constraintName="tradeObject_shop" referencedTableName="&TEShops;"
                                 referencedColumnNames="identifier"/>
    </changeSet>
</databaseChangeLog>